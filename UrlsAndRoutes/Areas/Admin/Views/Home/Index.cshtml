@model Person[]
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=devicewidth"/>
    <title>Areas</title>
    <link rel="stylesheet" asp-href-include="lib/bootstrap/dist/css/*.min.css"/>
</head>
<body class="m-1 p-1">
<table class="table table-bordered table-striped table-sm">
    <tr>
        <th>Name</th>
        <th>City</th>
    </tr>
    @foreach (Person person in Model)
    {
        <tr>
            <td>@person.Name</td>
            <td>@person.City</td>
        </tr>
    }
</table>
</body>
</html>